<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:fitsSystemWindows="false"
    android:padding="16dp"
    tools:ignore="SmallSp,UseCompoundDrawables,UselessLeaf,RtlHardcoded,RtlSymmetry,HardcodedText">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/actv_speed"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:paddingEnd="6dp"
        android:paddingStart="6dp"
        android:textColor="@color/welcome_text_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="你的平均网速为：%sKB/s" />


    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/default_unenable_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actv_speed" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/actv_descr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:gravity="center_vertical|start"
        android:textColor="@color/welcome_text_color"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actv_speed"
        tools:text="在对追求网速的这件事儿上，你一定是有点想要极致的想法" />

</android.support.constraint.ConstraintLayout>