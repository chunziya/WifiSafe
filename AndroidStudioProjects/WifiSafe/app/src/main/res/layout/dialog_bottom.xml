<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:fitsSystemWindows="false"
    tools:ignore="SmallSp,UseCompoundDrawables,UselessLeaf,RtlHardcoded,RtlSymmetry,HardcodedText">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/actv_ssid"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:gravity="start|center_vertical"
        android:paddingStart="16dp"
        android:textColor="@color/welcome_text_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Cugb_WIFI" />

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/cardview_dark_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actv_ssid" />


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/actv_security_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:drawablePadding="2dp"
        android:drawableTop="@drawable/icon_security_test"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="@string/wifi_check_title"
        android:textColor="@color/welcome_text_color"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actv_ssid" />


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/actv_speed_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:drawablePadding="2dp"
        android:drawableTop="@drawable/icon_speed_test"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="@string/wifi_speed_title"
        android:textColor="@color/welcome_text_color"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/actv_security_test"
        app:layout_constraintTop_toBottomOf="@+id/actv_ssid" />
</android.support.constraint.ConstraintLayout>